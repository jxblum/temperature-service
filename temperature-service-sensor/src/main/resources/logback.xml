<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="true" scanPeriod="15 seconds">

	<statusListener class="ch.qos.logback.core.status.NopStatusListener" />

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<withJansi>true</withJansi>
		<encoder>
			<pattern>%d - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="ch.qos.logback" level="${logback.log.level:-ERROR}"/>

	<logger name="org.springframework" level="${logback.log.level:-ERROR}"/>

	<root level="${logback.log.level:-INFO}">
		<appender-ref ref="console"/>
	</root>

</configuration>
